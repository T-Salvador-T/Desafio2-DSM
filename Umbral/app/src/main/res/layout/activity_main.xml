<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <!-- TÍTULO PRINCIPAL -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎓 Sistema Escolar Umbral"
            android:textSize="28sp"
            android:textColor="@color/fuchsia"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:letterSpacing="0.02"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido, Usuario"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:alpha="0.8"/>

        <!-- TARJETA ESTUDIANTES -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEstudiantes"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/purple_600"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="25dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_students"
                    android:tint="@color/white"
                    android:layout_marginEnd="20dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="👥 Gestión de Estudiantes"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registrar, editar y gestionar estudiantes"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:alpha="0.8"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/white"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TARJETA MATERIAS -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMaterias"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/fuchsia"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="25dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_subjects"
                    android:tint="@color/white"
                    android:layout_marginEnd="20dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📚 Gestión de Materias"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crear y administrar materias académicas"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:alpha="0.8"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/white"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TARJETA LISTADOS -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardListados"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="30dp"
            app:cardBackgroundColor="@color/purple_700"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="25dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_reports"
                    android:tint="@color/white"
                    android:layout_marginEnd="20dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📊 Listados y Reportes"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver reportes de estudiantes y calificaciones"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:alpha="0.8"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/white"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- BOTÓN CERRAR SESIÓN -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/purple_700"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="🚪 Cerrar Sesión"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_rounded"
                android:gravity="center"
                android:padding="0dp"
                android:stateListAnimator="@null"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>