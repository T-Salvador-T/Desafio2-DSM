<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/purple_700"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNombreEstudiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Estudiante"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvCarnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carnet: 123456"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edad: 20 años"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <!-- BOTONES DE ACCIÓN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- EDITAR ESTUDIANTE -->
            <Button
                android:id="@+id/btnEditarEstudiante"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Editar"
                android:backgroundTint="@color/purple_500"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"/>

            <!-- EDITAR NOTAS (NUEVO) -->
            <Button
                android:id="@+id/btnEditarNotas"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Notas"
                android:backgroundTint="@color/fuchsia"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"/>

            <!-- ELIMINAR ESTUDIANTE -->
            <Button
                android:id="@+id/btnEliminarEstudiante"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Eliminar"
                android:backgroundTint="@color/purple_200"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>