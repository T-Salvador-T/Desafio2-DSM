<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"> <!-- ✅ Espacio extra arriba -->

        <!-- TÍTULO PRINCIPAL -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Notas del Estudiante"
            android:textSize="22sp"
            android:textColor="@color/fuchsia"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvCarnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carnet: 123456"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>

        <!-- MATERIA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Materia:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerMaterias"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginBottom="20dp"/>

        <!-- PERÍODO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Período:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerPeriodo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginBottom="20dp"/>

        <!-- NOTA -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxStrokeColor="@color/purple_200"
            app:hintTextColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota (0-10)"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- BOTONES DE ACCIÓN - MEJOR DISTRIBUIDOS -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_marginBottom="20dp"
            android:padding="4dp">

            <!-- FILA 1 -->
            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Buscar"
                android:textSize="14sp"
                android:backgroundTint="@color/purple_500"
                android:textColor="@color/white"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Guardar"
                android:textSize="14sp"
                android:backgroundTint="@color/fuchsia"
                android:textColor="@color/white"
                android:layout_margin="4dp"/>

            <!-- FILA 2 -->
            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Eliminar"
                android:textSize="14sp"
                android:backgroundTint="@color/purple_700"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:enabled="false"/>

            <Button
                android:id="@+id/btnLimpiar"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Limpiar"
                android:textSize="14sp"
                android:backgroundTint="@color/purple_200"
                android:textColor="@color/black"
                android:layout_margin="4dp"/>

            <!-- FILA 3 - VOLVER OCUPANDO 2 COLUMNAS -->
            <Button
                android:id="@+id/btnVolver"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="2"
                android:layout_rowWeight="1"
                android:text="Volver al Menú"
                android:textSize="14sp"
                android:backgroundTint="@color/purple_200"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:layout_columnSpan="2"/>

        </GridLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>