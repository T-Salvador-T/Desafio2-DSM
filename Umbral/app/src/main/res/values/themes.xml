<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Theme principal de la aplicaciÃ³n -->
    <style name="Theme.TuApp" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/fuchsia</item>
        <item name="colorSecondaryVariant">@color/fuchsia</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="Theme.NoActionBar" parent="Theme.TuApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Estilo para botones sin sombra por defecto -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
    </style>

    <!-- Estilo para cards con sombra -->
    <style name="Widget.App.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>
</resources>